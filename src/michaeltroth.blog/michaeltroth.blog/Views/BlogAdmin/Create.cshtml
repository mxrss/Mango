@model michaeltroth.blog.Models.InputModel.BlogCreationRequestInputModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create A New Blog Post</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.BlogTitle, "Blog Title", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BlogTitle)
                @Html.ValidationMessageFor(model => model.BlogTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BlogShortText, "Short Text", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BlogShortText)
                @Html.ValidationMessageFor(model => model.BlogShortText)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BodyText, "Main Body Text", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model=> model.BodyText, 10, 60, null)
                @Html.ValidationMessageFor(model => model.BodyText, null)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PublishDate, "Publish Date", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PublishDate)
                @Html.ValidationMessageFor(model => model.PublishDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DelimetedListOfTags, "Comma Sepearted Tags", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DelimetedListOfTags)
                @Html.ValidationMessageFor(model => model.DelimetedListOfTags)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
